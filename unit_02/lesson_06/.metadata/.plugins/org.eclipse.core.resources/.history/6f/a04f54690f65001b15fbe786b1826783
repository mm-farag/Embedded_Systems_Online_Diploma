#include <stdio.h>
#include <stdlib.h>



union UNUValues
{
	int int_Value;
	float float_Value;
	double double_Value;

};




int main(void)
{
	union UNUValues v1, v2, v3;
	v1.int_Value = 9898;
	v2.int_Value =
	printf("the sizeof union is: %d\n", sizeof(union UNUValues));

	return EXIT_SUCCESS;
}
